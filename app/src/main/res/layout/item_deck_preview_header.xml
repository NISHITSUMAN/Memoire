<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_corner_radius_4dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            android:text="@string/text_filter_button"
            android:textColor="@color/text_medium_emphasis"
            android:textSize="@dimen/text_size_home_screen_filters_sorting_button"
            app:drawableStartCompat="@drawable/ic_filter_12"
            app:drawableTint="@color/text_medium_emphasis" />

    <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    <TextView
            android:id="@+id/sortingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_corner_radius_4dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            android:textColor="@color/text_medium_emphasis"
            android:textSize="@dimen/text_size_home_screen_filters_sorting_button"
            app:drawableStartCompat="@drawable/ic_sorting_12"
            app:drawableTint="@color/text_medium_emphasis"
            tools:drawableEndCompat="@drawable/ic_round_arrow_downward_12"
            tools:text="By time last tested" />

</LinearLayout>