<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_grade"
        android:orientation="horizontal"
        tools:background="@color/popup_dark">

    <TextView
            android:id="@+id/gradeIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:textColor="@color/text_grade"
            android:textSize="@dimen/text_size_grade"
            tools:backgroundTint="@color/grade_unsatisfactory"
            tools:text="0"
            tools:visibility="visible" />

    <TextView
            android:id="@+id/waitingPeriodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/text_waiting_period"
            android:textSize="@dimen/text_size_intervals_popup_waiting_period"
            tools:text="8 hours" />

</LinearLayout>