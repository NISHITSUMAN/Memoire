<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/icon_on_control_panel" />
            <corners android:radius="64dp" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/ripple_on_control_panel">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="#000" />
                    <corners android:radius="64dp" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>