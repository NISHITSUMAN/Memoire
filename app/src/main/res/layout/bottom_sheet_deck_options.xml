<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:background="@drawable/background_bottom_sheet_round_corner"
        tools:layout_gravity="bottom">

    <View
            android:id="@+id/handle"
            android:layout_width="76dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_sheet_handler" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <View
                android:id="@+id/deckListIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/deck_list_indicator" />

        <TextView
                android:id="@+id/deckNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/text_high_emphasis"
                android:textSize="@dimen/text_size_option_bottom_sheet_title"
                android:textStyle="bold"
                tools:text="Английский №8" />

    </LinearLayout>

    <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/startExerciseDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_start_exercise"
                    app:drawableStartCompat="@drawable/ic_round_school_20" />

            <TextView
                    android:id="@+id/autoplayDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_autoplay"
                    app:drawableStartCompat="@drawable/ic_play_20" />

            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider" />

            <TextView
                    android:id="@+id/renameDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_rename"
                    app:drawableStartCompat="@drawable/ic_round_font_download_20" />

            <TextView
                    android:id="@+id/setupDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_setup"
                    app:drawableStartCompat="@drawable/ic_round_build_20" />

            <TextView
                    android:id="@+id/editCardsDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_edit_cards"
                    app:drawableStartCompat="@drawable/ic_round_edit_20" />

            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="84dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/divider" />

            <TextView
                    android:id="@+id/pinDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_pin"
                    app:drawableStartCompat="@drawable/ic_round_push_pin_20" />

            <TextView
                    android:id="@+id/addToDeckListDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_add_to_deck_list"
                    app:drawableStartCompat="@drawable/ic_round_playlist_add_20" />

            <TextView
                    android:id="@+id/removeFromDeckListDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_remove_from_deck_list"
                    app:drawableStartCompat="@drawable/ic_remove_from_list_20" />

            <TextView
                    android:id="@+id/exportDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_export"
                    app:drawableStartCompat="@drawable/ic_round_unarchive_20" />

            <TextView
                    android:id="@+id/mergeIntoDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_merge_into"
                    app:drawableStartCompat="@drawable/ic_round_merge_type_20" />

            <TextView
                    android:id="@+id/removeDeckOptionItem"
                    style="@style/DeckOptionItem"
                    android:text="@string/deck_option_remove"
                    app:drawableStartCompat="@drawable/ic_round_delete_20" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>