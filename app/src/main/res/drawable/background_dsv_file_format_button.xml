<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke
                            android:width="2dp"
                            android:color="@color/accent" />
                    <solid android:color="@color/surface" />
                </shape>
            </item>
            <item android:drawable="@drawable/ripple_rectangular_colored" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <stroke
                            android:width="1dp"
                            android:color="@color/dsv_controller_disabled" />
                    <solid android:color="@color/dsv_controller_background_disabled" />
                </shape>
            </item>
            <item android:drawable="@drawable/ripple_rectangular_colored" />
        </layer-list>
    </item>
</selector>