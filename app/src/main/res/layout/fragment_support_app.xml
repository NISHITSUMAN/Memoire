<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window"
            android:orientation="horizontal"
            android:stateListAnimator="@animator/app_bar">

        <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="12dp"
                android:background="@drawable/ripple"
                android:contentDescription="@string/description_back_button"
                android:tint="@color/screen_title"
                android:tintMode="src_in"
                app:srcCompat="@drawable/ic_round_keyboard_backspace_24" />

        <TextView
                android:id="@+id/screenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/jura"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="@string/screen_title_support_app"
                android:textColor="@color/screen_title"
                android:textSize="@dimen/text_size_screen_title"
                android:textStyle="bold" />

    </FrameLayout>

    <ScrollView
            android:id="@+id/contentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout style="@style/SupportAppItem">

                <TextView
                        style="@style/CTA"
                        android:text="@string/cta_rate_the_app_on_google_play" />

                <TextView
                        style="@style/CTA_Description"
                        android:text="@string/cta_rate_the_app_on_google_play_description" />

                <TextView
                        android:id="@+id/rateUsButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_rate_us_button" />

            </LinearLayout>

            <LinearLayout style="@style/SupportAppItem">

                <TextView
                        style="@style/CTA"
                        android:text="@string/cta_give_us_feedback" />

                <TextView
                        style="@style/CTA_Description"
                        android:text="@string/cta_give_us_feedback_description" />

                <TextView
                        android:id="@+id/writeReviewOnGooglePlayButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_write_review_on_google_play_button" />

                <TextView
                        android:id="@+id/submitNewIssueOnGithubButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_submit_new_issue_on_github_button" />

                <TextView
                        android:id="@+id/sendEmailToAuthorButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_send_email_to_author_button" />

            </LinearLayout>

            <LinearLayout style="@style/SupportAppItem">

                <TextView
                        style="@style/CTA"
                        android:text="@string/cta_help_us_with_translation" />

                <TextView
                        style="@style/CTA_Description"
                        android:text="@string/cta_help_us_with_translation_description" />

                <TextView
                        android:id="@+id/helpTranslateButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_help_translate_button" />

            </LinearLayout>

            <LinearLayout style="@style/SupportAppItem">

                <TextView
                        style="@style/CTA"
                        android:text="@string/cta_share_with_friends" />

                <TextView
                        style="@style/CTA_Description"
                        android:text="@string/cta_share_with_friends_description" />

                <TextView
                        android:id="@+id/shareWithFrindsButton"
                        style="@style/SupportAppButton"
                        android:text="@string/text_share_with_friends_button" />

            </LinearLayout>

            <LinearLayout style="@style/SupportAppItem">

                <TextView
                        style="@style/CTA"
                        android:text="@string/cta_join_us_on_social_media" />

                <TextView
                        style="@style/CTA_Description"
                        android:text="@string/cta_join_us_on_social_media_description" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                    <ImageButton
                            android:id="@+id/facebookButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/description_facebook_button"
                            android:tint="@color/tint_colorful_icon"
                            android:tintMode="src_atop"
                            app:srcCompat="@drawable/ic_sm_facebook_32" />

                    <ImageButton
                            android:id="@+id/instagramButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/description_instagram_button"
                            android:tint="@color/tint_colorful_icon"
                            android:tintMode="src_atop"
                            app:srcCompat="@drawable/ic_sm_instagram_32" />

                    <ImageButton
                            android:id="@+id/twitterButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/description_twitter_button"
                            android:tint="@color/tint_colorful_icon"
                            android:tintMode="src_atop"
                            app:srcCompat="@drawable/ic_sm_twitter_32" />

                    <ImageButton
                            android:id="@+id/youtubeButton"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/description_youtube_button"
                            android:tint="@color/tint_colorful_icon"
                            android:tintMode="src_atop"
                            app:srcCompat="@drawable/ic_sm_youtube_32" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>