<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:background="@android:color/white">

    <View
            android:id="@+id/indicator"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:background="@drawable/drawer_item_indicator"
            app:layout_constraintBottom_toBottomOf="@id/helpArticleTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/helpArticleTitleTextView" />

    <TextView
            android:id="@+id/helpArticleTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rectangular_colored"
            android:fontFamily="@font/nunito_bold"
            android:paddingStart="38dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            android:textColor="@color/item_drawer"
            android:textSize="@dimen/text_size_help_article_drawer_article_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/help_article_title_import_of_file" />

</androidx.constraintlayout.widget.ConstraintLayout>