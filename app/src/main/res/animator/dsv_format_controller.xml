<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <objectAnimator
                android:duration="300"
                android:propertyName="elevation"
                android:valueTo="2dp"
                android:valueType="floatType" />
    </item>
    <item>
        <objectAnimator
                android:duration="300"
                android:propertyName="elevation"
                android:valueTo="0dp"
                android:valueType="floatType" />
    </item>
</selector>