<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/deckListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:background="@drawable/ripple_corner_radius_4dp"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_bold"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="@color/text_medium_emphasis"
            android:textSize="@dimen/text_size_home_screen_filters_sorting_button"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sortingButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableEnd="@drawable/ic_expand_more_thick_12"
            tools:drawableStart="@drawable/deck_list_indicator"
            tools:text="English irregular verbs" />

    <TextView
            android:id="@+id/sortingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_corner_radius_4dp"
            android:drawablePadding="8dp"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            android:textColor="@color/text_medium_emphasis"
            android:textSize="@dimen/text_size_home_screen_filters_sorting_button"
            app:drawableStartCompat="@drawable/ic_sorting_12"
            app:drawableTint="@color/text_medium_emphasis"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:drawableEndCompat="@drawable/ic_round_arrow_downward_12"
            tools:text="By time last tested" />

</androidx.constraintlayout.widget.ConstraintLayout>