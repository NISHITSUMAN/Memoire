<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/control_panel</item>
        <item name="colorPrimaryDark">@color/control_panel</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlHighlight">@color/ripple</item>
        <item name="android:windowBackground">@color/window</item>
        <item name="shapeAppearanceLargeComponent">@style/RoundCornerBottomSheet</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="LastTestedTheme" parent="AppTheme">
        <item name="colorAccent">@color/last_tested</item>
    </style>

    <style name="LastTestedPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/last_tested</item>
        <item name="android:textSize">@dimen/text_size_last_tested_number_picker</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ArticleParagraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="ArticleSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="DrawerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/ripple_rectangular_colored</item>
    </style>

    <style name="DrawerIndicator">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/drawer_item_indicator</item>
    </style>

    <style name="DrawerItemIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:tint">@color/item_drawer</item>
        <item name="android:tintMode">src_in</item>
    </style>

    <style name="DrawerItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textColor">@color/item_drawer</item>
        <item name="android:textSize">@dimen/text_size_main_drawer_item</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SortingItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/item_blue_selector</item>
        <item name="android:textSize">@dimen/text_size_deck_sorting_popup_item</item>
    </style>

    <style name="Animation_Popup_Before_23_API">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="AnimationCardLabel">
        <item name="android:windowEnterAnimation">@anim/popup_show_from_top</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="DeckOptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:textSize">@dimen/text_size_deck_option_bottom_sheet_item</item>
        <item name="android:background">@drawable/ripple_rectangular_colored</item>
        <item name="drawableTint">@color/text_medium_emphasis</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RoundCornerBottomSheet" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="BottomSheetDialogTransparentBackground" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">32dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:textSize">@dimen/text_size_about_screen_item</item>
        <item name="android:background">@drawable/ripple_rectangular_colored</item>
        <item name="drawableTint">@color/text_medium_emphasis</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Support app screen -->

    <style name="SupportAppItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@drawable/surface_4dp_corner_radius</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CTA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
    </style>

    <style name="CTA_Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:textSize">@dimen/text_size_description</item>
    </style>

    <style name="SupportAppButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/background_button_on_support_app_screen</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/item_blue_selected</item>
        <item name="android:textSize">@dimen/text_size_support_app_screen_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- End support app screen -->

    <style name="ExerciseCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card</item>
    </style>

    <style name="WalkingModeSwitchStyle">
        <item name="colorControlActivated">@color/walking_mode_icon_on_popup</item>
    </style>

    <style name="InfinitePlaybackSwitchStyle">
        <item name="colorControlActivated">@color/infinite_playback_icon_on_popup</item>
    </style>

    <style name="IntervalsSettingsTheme">
        <item name="colorControlActivated">@color/floating_button_in_exercise</item>
    </style>

    <style name="IntervalsPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/floating_button_in_exercise</item>
        <item name="android:textSize">@dimen/text_size_intervals_number_picker</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="VariantFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@drawable/background_variant_status_not_selected</item>
    </style>

    <style name="VariantButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_exercise_screen_variant_button</item>
        <item name="android:textColor">@color/text_on_card_default</item>
        <item name="android:autoLink">web</item>
        <item name="drawableStartCompat">@drawable/ic_radiobutton_unchecked_24</item>
    </style>

    <!-- Settings -->

    <style name="SettingsSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/item_blue_selected</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
    </style>

    <style name="SettingsItemButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_settings_button</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/tint_colorful_icon</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="SettingsTextColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textSize">@dimen/text_size_settings_item_title</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SettingsItemDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_helper</item>
        <item name="android:textSize">@dimen/text_size_settings_item_description</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>

    <style name="SettingsItemNavigationIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@string/description_navigate_icon</item>
        <item name="srcCompat">@drawable/ic_round_chevron_right_32</item>
        <item name="android:tint">@color/accent</item>
        <item name="android:tintMode">src_in</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/divider_on_surface_with_margins</item>
    </style>

    <style name="VolumeKeyIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- end Settings -->

    <!-- DSV format -->

    <style name="DSVFormatItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/text_medium_emphasis</item>
        <item name="android:textSize">@dimen/text_size_dsv_format_screen_item_title</item>
    </style>

    <style name="DSVFormatItemButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/background_dsv_file_format_button</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/text_dsv_format_controller</item>
        <item name="android:textSize">@dimen/text_size_dsv_format_screen_item_controller</item>
        <item name="layout_constraintWidth_min">40dp</item>
        <item name="android:stateListAnimator">@animator/dsv_format_controller</item>
    </style>

    <style name="DSVFormatItemEditText" parent="@style/DSVFormatItemButton">
        <item name="android:background">@drawable/background_dsv_file_format_edittext</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- end DSV format -->

    <style name="SettingsSurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/surface_4dp_corner_radius</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsTitleOnSettingsSurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/text_high_emphasis</item>
        <item name="android:textSize">@dimen/text_size_section_title</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">@color/title_icon_in_dialog</item>
    </style>

    <style name="DividerOnSettingsSurface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>